/* pages/categor/categor.wxss */

.roqi {
  width: 50%;
  height: 50vw;
  float: left;
  background-size: 100% 100%;
  background-position: center;
  position: relative;
}

.roqi-box {
  width: 100px;
  height: 100px;
  position: absolute;
  top: 50%;
  margin-top: -50px;
  left: 50%;
  margin-left: -50px;
  line-height: 100px;
  text-align: center;

  /* border-bottom: 3px solid #fff; */
}
.roqi .roqi-box text{
  position: relative;
  color: white;
  font-size: 16px;
  font-weight: bold;

}
.roqi .roqi-box text::after{
  content: "";
  display: block;
  position: absolute;
  left: 50%;
  margin-left: -20rpx;
  bottom: -14px;
  width: 40rpx;
  background-color: white;
  height: 5rpx;
}
